{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Player Statistics Data Schema",
  "version": "1.0.0",
  "description": "Standardized data exchange format for player statistics partials",
  "type": "object",
  "properties": {
    "player": {
      "type": "object",
      "properties": {
        "id": { "type": "integer" },
        "name": { "type": "string" },
        "first_name": { "type": ["string", "null"] },
        "last_name": { "type": ["string", "null"] },
        "full_name": { "type": "string" },
        "position": { "type": ["string", "null"] },
        "jersey_number": { "type": ["integer", "null"] },
        "age": { "type": ["integer", "null"] },
        "bio": { "type": ["string", "null"] },
        "goals": { "type": ["integer", "null"], "minimum": 0 },
        "assists": { "type": ["integer", "null"], "minimum": 0 },
        "appearances": { "type": ["integer", "null"], "minimum": 0 },
        "yellow_cards": { "type": ["integer", "null"], "minimum": 0 },
        "red_cards": { "type": ["integer", "null"], "minimum": 0 },
        "image_path": { "type": ["string", "null"] },
        "youtube_url": { "type": ["string", "null"] },
        "formatted_category": { "type": ["string", "null"] }
      },
      "required": ["id", "name"]
    },
    "allPlayers": {
      "type": "array",
      "items": {
        "$ref": "#/properties/player"
      }
    },
    "metadata": {
      "type": "object",
      "properties": {
        "version": { "type": "string" },
        "lastModified": { "type": "string", "format": "date-time" },
        "author": { "type": "string" },
        "changeLog": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "version": { "type": "string" },
              "date": { "type": "string", "format": "date-time" },
              "changes": { "type": "string" }
            }
          }
        }
      }
    }
  },
  "required": ["player"]
}
